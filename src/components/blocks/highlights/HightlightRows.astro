---
// Highlights Section
// ------------
// Description: A section with a multiple text and image rows.

// Components
// - UI
import TextImage from '../basic/TextImage.astro'

// Content
import highlight01 from '../../../assets/highlights/highlight-01.png'
import highlight01mobile from '../../../assets/highlights/highlight-01-mobile.png'
import highlight02 from '../../../assets/highlights/highlight-02.png'
import highlight02mobile from '../../../assets/highlights/highlight-02-mobile.png'
import highlight03 from '../../../assets/highlights/highlight-03.svg'
import highlight03mobile from '../../../assets/highlights/highlight-03-mobile.svg'
import highlight04 from '../../../assets/highlights/highlight-04.png'
import highlight04mobile from '../../../assets/highlights/highlight-04-mobile.png'

type HighlightBlock = {
	title: string
	text: string
	image: any
	mobileImage?: any
	imageWidth: number
	imageHeight: number
	imagePosition: 'left' | 'right'
}
const highlightBlocks: HighlightBlock[] = [
	{
		title: '<strong>Buildify</strong>',
		text: 'Visual-to-code builder for Shopify sections',
		image: highlight01,
		imageWidth: highlight01.width,
		imageHeight: highlight01.height,
		mobileImage: highlight01mobile,
		imagePosition: 'right'
	},
	{
		title: '<strong>AutoInsta</strong>',
		text: 'Automated Instagram engagement flows',
		image: highlight02,
		mobileImage: highlight02mobile,
		imageWidth: highlight02.width,
		imageHeight: highlight02.height,
		imagePosition: 'left'
	},
	{
		title: '<strong>BrandHunt</strong>',
		text: 'Tool to discover and analyze D2C brands',
		image: highlight03,
		mobileImage: highlight03mobile,
		imageWidth: highlight03.width,
		imageHeight: highlight03.height,
		imagePosition: 'right'
	},
	{
		title: '<strong>SuperNav</strong>',
		text: 'comprehensive and multi featured fund accounting and Management software for investment funds Private equity,Venture capital and Fund Administrators.',
		image: highlight04,
		mobileImage: highlight04mobile,
		imageWidth: highlight04.width,
		imageHeight: highlight04.height,
		imagePosition: 'left'
	}

	// {
	// 	title: '<strong>Voxie</strong>',
	// 	text: 'Conversational AI system for voice-based interactions',
	// 	image: highlight04,
	// 	mobileImage: highlight04mobile,
	// 	imageWidth: highlight04.width,
	// 	imageHeight: highlight04.height,
	// 	imagePosition: 'right'
	// },
	// {
	// 	title: '<strong>Mike GTM Engine</strong>',
	// 	text: 'Empower Harvey (SDR) to close deals faster by delivering actionable and relevant leads.',
	// 	image: highlight04,
	// 	mobileImage: highlight04mobile,
	// 	imageWidth: highlight04.width,
	// 	imageHeight: highlight04.height,
	// 	imagePosition: 'left'
	// }
]
---

<div id="products">
	{
		highlightBlocks.map((highlight, key) => (
			<TextImage
				id={`highlight-${key}`}
				title={highlight.title}
				text={highlight.text}
				image={highlight.image}
				imageWidth={highlight.imageWidth}
				imageHeight={highlight.imageHeight}
				mobileImage={highlight.mobileImage}
				imagePosition={highlight.imagePosition}
				classes={key === 0 ? '!pb-0' : key === highlightBlocks.length - 1 ? '!pt-0' : '!py-0'}
			/>
		))
	}
</div>
